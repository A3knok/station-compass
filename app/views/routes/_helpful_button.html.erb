<% if route.helpful_by?(current_user) %>
  <%= button_to route_helpful_marks_path(route),
                method: :delete,
                class: "btn btn-helpful" do %>
    <i class="fa-solid fa-heart text-danger"></i>
    <%= route.helpful_count %>
  <% end %>
<% else %>
  <%= button_to route_helpful_marks_path(route),
                method: :post,
                class: "btn btn-helpful" do %>
    <i class="fa-regular fa-heart"></i>
    <%= route.helpful_count %>
  <% end %>
<% end %>