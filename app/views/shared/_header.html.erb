<header>
  <nav class="navbar navbar-expand-lg">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">駅コンパス</a>
      <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
          <% if user_signed_in? %>
            <li class="nav-item me-2">
              <%= link_to t('header.routes'), new_user_session_path %>
            </li>
            <li class="nav-item me-2">
              <%= link_to t('header.my_page'), user_path(current_user) %>
            </li>
            <li class="nav-item me-2">
              <%= link_to t('header.logout'), destroy_user_session_path, data: { turbo_method: :delete } %>
            </li>
          <% else %>
            <li class="nav-item me-2">
              <%= link_to t('header.login'), new_user_session_path %>
            </li>
            <li class="nav-item">
              <%= link_to t('header.sign_up'), new_user_registration_path %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>