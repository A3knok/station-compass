<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
      <h2 class="text-center mb-5">
        <i class="fas fa-user me-2 text-primary"></i>
        <%= t('.title') %>
      </h2>

      <div class="border rounded-3 shadow-sm p-4 mb-4">
        <dl class="row mb-0 align-items-center">
          <!-- 名前 -->
          <dt class="col-6 fw-bold d-flex align-items-center mb-3">
            <i class="fas fa-user text-primary me-2"></i>
            <%= t('.name') %>
          </dt>
          <dd class="col-6 align-items-center text-end mb-3">
            <span class="fs-6 fw-normal text-dark"><%= @user.name %></span>
          </dd>

          <!-- 投稿数 -->
          <dt class="col-6 fw-bold d-flex align-items-center mb-3">
            <i class="fas fa-newspaper text-success me-2"></i>
            <%= t('users.show.post_count') %>
          </dt>
          <dd class="col-6 d-flex align-items-center justify-content-end mb-3">
            <span class="badge bg-success fs-6"><%= @total_routes_count %>件</span>
          </dd>

          <!-- 区切り線 -->
          <dt class="col-12"><hr class="my-3"></dt>
          <dd class="col-12"></dd>

          <!-- 投稿履歴 -->
          <dt class="col-12 fw-bold mb-3">
            <i class="fas fa-history text-info me-2"></i>
            <%= t('.history') %>
          </dt>
          <dd class="col-12">
            <%= render 'routes/route', routes: @recent_routes, show_actions: true %>
          </dd>
        </dl>
      </div>    
    </div>
  </div>
</div>
