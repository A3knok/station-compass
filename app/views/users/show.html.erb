<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
      <h2 class="text-center mb-5">
        <i class="fas fa-user me-2"></i>
        <%= t('users.show.title') %>
      </h2>

      <dl class="row mb-0">
        <dt class="col-4 fw-bold"><%= t('.name')%></dt>
        <dd class="col-8 text-end mb-3"><%= @user.name %></dd>

        <dt class="col-4 fw-bold"><%= t('.post_count')%></dt>
        <dd class="col-8 text-end mb-5">0</dd>

        <dt class="col-12 fw-bold"><%= t('.history')%></dt>
        <dd>
          <div class="d-flex">
            <div class="flex-grow-1 me-3">
              <span>投稿概要</span>
            </div>
            <div class="d-flex gap-2">
              <%= link_to root_path, class: "btn btn-sm" do %>
                <i class="fa-solid fa-pen"></i>
                <span><%= t('helpers.submit.user.edit')%></span>
              <% end %>
              <%= link_to root_path, class: "btn btn-sm" do %>
                <i class="fa-solid fa-trash"></i>
                <span><%= t('helpers.submit.user.destroy')%></span>
              <% end %>
            </div>
          </div>
        </dd>
      </dl>

    </div>
  </div>
</div>
