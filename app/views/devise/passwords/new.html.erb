<%= content_for(:title, t('.title')) %>

<div class="station-atmosphere bg-light">
  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6">
        <h2 class="text-center mb-5"><%= t('.title') %></h2>
        <%= render 'shared/error_messages' %>

        <%= form_with(model: resource, as: resource_name, url: password_path(resource_name)) do |f| %>
          <div class="field mb-5">
            <strong>
              <%= f.label :email, class: "form-label" %>
            </strong>
            <%= f.email_field :email, autofocus: true, autocomplete: "email",  class: "form-control" %>
          </div>

          <div class="d-grid">
            <%= f.submit t('helpers.submit.user_password.create'), class: "btn btn-primary btn-lg" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= render "devise/shared/links" %>
