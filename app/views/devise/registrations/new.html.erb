<%= content_for(:title, t('.title')) %>

<div class="page-container">
  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6">
        <div class="station-sign-bar mb-3"></div>
        <%= form_with(model: resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <h2 class="text-center mb-5"><%= t('.title') %></h2>
          <%= render 'shared/error_messages' %>
            <div class="field mb-3">
              <strong>
                <%= f.label :name, class: "form-label" %>
              </strong>
              <%= f.text_field :name, autofocus: true, class: "form-control" %>
            </div>

            <div class="field mb-3">
              <strong>
                <%= f.label :email, class: "form-label" %>
              </strong>
              <%= f.email_field :email, autofocus: true, autocomplete: "email",  class: "form-control" %>
            </div>

            <div class="field mb-3">
              <strong>
                <%= f.label :password, class: "form-label" %>
              </strong>
              <!-- 入力情報：新しいパスワード情報-->
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
            </div>

            <div class="field mb-3">
              <strong>
                <%= f.label :password_confirmation, class: "form-label" %>
              </strong>
              <!-- 入力情報：新しいパスワード情報-->
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mb-5 form-control" %>
            </div>

            <div class="d-grid">
              <%= f.submit t('helpers.submit.user.create'), class: "btn btn-primary btn-lg" %>
            </div>
        <% end %>
        <%#= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>