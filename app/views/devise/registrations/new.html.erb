<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
      <%= form_with(model: resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <h2 class="text-center"><%= t('sign_up.new.title') %></h2>
        <%= render 'shared/error_messages' %>
          <div class="field mb-3">
            <%= f.label :name %><br>
            <%= f.text_field :name, autofocus: true, class: "form-control" %>
          </div>

          <div class="field mb-3">
            <%= f.label :email %><br>
            <%= f.email_field :email, autofocus: true, autocomplete: "email",  class: "form-control" %>
          </div>

          <div class="field mb-3">
            <%= f.label :password %><br>
            <!-- 入力情報：新しいパスワード情報-->
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          </div>

          <div class="field mb-3">
            <%= f.label :password_confirmation %><br>
            <!-- 入力情報：新しいパスワード情報-->
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mb-5 form-control" %>
          </div>

          <div class="d-grid">
            <%= f.submit t('helpers.submit.user.create'), class: "btn btn-primary btn-lg" %>
          </div>
      <% end %>
      <%#= render "devise/shared/links" %>
    </div>
  </div>
</div>